<h1>List of all movies</h1>

<table border="1">
 <tr>
    <th>Id</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th> </th>
  </tr>

<% @list_of_movies.each do |cinema| %>
  <tr>
    <td><%= cinema.id %></td>
    <td>
      <img src="http://robohash.org/<%= cinema.image %>">
    </td>
    <td><%= cinema.title %></td>
    <td><%= cinema.year %></td>
    <td>
      <% m = Director.where({ :id => cinema.director_id }).at(0) %>
      <%= m.name %>
    </td>
    <td>
      <a href="/movies/<%= cinema.id %>">
      Show details
    </td>
  </tr>
<% end %>
</table>
