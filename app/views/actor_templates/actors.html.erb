<h1>
  Actor #<%= @the_actor.id %> details
</h1>

<a href="/actors" class="btn btn-block btn-outline-secondary">
  Go back
</a>

&nbsp;|&nbsp;

<a href="/delete_actor/<%= @the_actor.id %>" class="btn btn-block btn-outline-secondary">
</a>

<hr>

<dl>
  <dt>
    Name
  </dt>
  <dd>
    <%= Actor.where({ :id => @the_actor.id }).at(0).name %>
  </dd>

  <dt>
    Dob
  </dt>
  <dd>
    <%= @the_actor.dob %>
  </dd>

  <dt>
    Bio
  </dt>
  <dd>
    <%= @the_actor.bio %>
  </dd>

  <dt>
    Image
  </dt>
  <dd>
    <img src="<%= @the_actor.image %>">
  </dd>

  <dt>
    Created at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.created_at) %> ago
  </dd>

  <dt>
    Updated at
  </dt>
  <dd>
    <%= time_ago_in_words(@the_actor.updated_at) %> ago
  </dd>
</dl>

<h2>Filmography</h2>

<table border="1">
 <tr>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th>Character Name</th>
    <th> </th>
  </tr>

<% @characters.each do |character| %>
  <tr>
    <td>
      <% movie = Movie.where({ :id => character.movie_id}).at(0) %>
      <%= movie.title %>
    </td>
    <td>
      <%= movie.year %>
    </td>
    <td>
      <% director = Director.where({ :id => movie.director_id }).at(0) %>
      <%= director.name %>
    </td>
    <td>
      <%= character.name %>
    </td>
    <td>
      <a href="/movies/<%= character.id %>">
        Show details 
      </a>
    </td>
  </tr>
<% end %>
</table>
